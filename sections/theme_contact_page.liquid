<div class="section flex flex-col md:flex-row contact_us_page mb-[64px]">
  <div class="sm:py-[56px] sm:px-[64px]">
    {% assign title_text = section.settings.title1 %}
    {% include 'section_title' with title_text %}
    <h3 class="text-[16px] text-center">{{ section.settings.paragraph1 }}</h3>
    <div class="flex flex-col gap-2">
      <div class="flex gap-2 w-full py-6 px-2">
        <div class="w-[72px] h-[68px] text-red-300">Image</div>
        <div class="flex flex-col justify-between gap-4">
          <h4 class="text-[18px] ">Product Enquiries</h4>
          <a href="mailto:{{ settings.product_enquiries_email }}" class="underline">{{ settings.product_enquiries_email }}</a>
        </div>
      </div>
      <div class="flex gap-2 w-full py-6 px-2">
        <div class="w-[72px] h-[68px] text-red-300">Image</div>
        <div class="flex flex-col justify-between gap-4">
          <h4 class="text-[18px]">Shipping Enquiries</h4>
          <a href="mailto:{{ settings.shipping_enquiries_email }}" class="underline">{{ settings.shipping_enquiries_email }}</a>
        </div>
      </div>
      <div class="flex gap-2 w-full py-6 px-2">
        <div class="w-[72px] h-[68px] text-red-300">Image</div>
        <div class="flex flex-col justify-between gap-4">
          <h4 class="text-[18px]">Phone</h4>
          <a href="tel:{{ settings.phone_number }}" class="underline">{{ settings.phone_number }}</a>
        </div>
      </div>
      <div class="flex gap-2 w-full py-6 px-2">
        <div class="w-[72px] h-[68px] text-red-300">Image</div>
        <div class="flex flex-col justify-between gap-4">
          <h4 class="text-[18px]">Address</h4>
          <h4>{{ settings.address }}</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="sm:py-[56px] sm:px-[64px]">
    <h2 class="text-[32px] text-center py-6">{{ section.settings.title2 }}</h2>
    {% if section.settings.working_hours_show == true %}
      <h3 class="text-[16px] text-center py-2">{{ settings.working_hours }}</h3>
    {% endif %}
    <h2 class="text-[16px] text-center py-2">{{ section.settings.paragraph2 }}</h2>
    {% form 'contact' %}
      <div class="first-name">
        <input
          type="text"
          name="contact[first_name]"
          id="first-name"
          placeholder="First name" />
      </div>

      <div class="phone">
        <input
          type="tel"
          name="contact[phone]"
          id="phone"
          placeholder="Phone" />
      </div>

      <div class="email">
        <input
          type="email"
          name="contact[email]"
          id="email"
          placeholder="Email address" />
      </div>

      <div class="message">
        <textarea
          name="contact[body]"
          id="message"
          placeholder="Message"></textarea>
      </div>

      <div class="submit">
        <input type="submit" value="SEND" />
      </div>

      {{ form.errors | default_errors }}
    {% endform %}
  </div>
</div>
<div class="section">
  <iframe
    src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d177513.5541079131!2d72.91869470569814!3d26.21682084506533!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39418bd3293b3b55%3A0xbc1d14a21c3f3997!2sCultivator%20Natural%20Products%20Pvt.%20Ltd.!5e0!3m2!1sen!2sbg!4v1695020591467!5m2!1sen!2sbg"
    width="1312"
    height="566"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>

{% schema %}
  {
    "name": "Contact Page Details",
    "settings": [
      {
        "type": "text",
        "label": "Contact Details Title",
        "id": "title1"
      },
      {
        "type": "richtext",
        "label": "Contact Details Paragraph",
        "id": "paragraph1"
      },
      {
        "type": "text",
        "label": "Contact us form title",
        "id": "title2"
      },
      {
        "type": "richtext",
        "label": "Contact us form paragraph",
        "id": "paragraph2"
      }, {
        "type": "checkbox",
        "label": "Show working hours",
        "id": "working_hours_show",
        "default": true
      }
    ]
  }
{% endschema %}