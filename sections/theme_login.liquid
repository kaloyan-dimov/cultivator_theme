<div class="w-full px-[16px] flex flex-col items-center mx-auto pt-[92px] md:pt-[180px] pb-[100px] md:pb-[188px]">
  <div class="max-w-[428px]">
  <h1 class="h1 text-taupe mb-[48px] text-center">Login</h1>
  {% form 'customer_login' %}
    <div class="flex flex-col gap-[16px] pb-[32px]">
      {{ form.errors | default_errors }}
      <div class="email w-full">
        <input
          class="flex items-center w-full bg-white border border-[#EAE2DB] rounded-[12px] px-[16px] h-[56px] text-[18px]"
          type="email"
          name="customer[email]"
          placeholder="Email">
      </div>

      <div class="password w-full">
        <input
          class="flex items-center w-full bg-white border border-[#EAE2DB] rounded-[12px] px-[16px] h-[56px] text-[18px]"
          type="password"
          name="customer[password]"
          placeholder="Password">
      </div>

      <h2 class="recover_password_trigger body-s-semibold underline self-end cursor-pointer">Forgot password?</h2>

      <h2 class="body-m text-taupe-200 my-[8px]">by logging in, you agree to our
        <a class="body-m-semibold" href="#">terms</a>, and
        <a class="body-m-semibold" href="/policies/privacy-policy">privacy policy</a>
      </h2>
      <div class="submit">
        <input
          type="submit"
          value="LOGIN"
          class="CTA flex justify-center items-center w-full bg-ecru rounded-[18px] h-[56px] text-white cursor-pointer">
      </div>
    </div>
  {% endform %}
  {% if shop.customer_accounts_enabled %}
    <div class="flex flex-col items-center">
      <h2 class="body-m text-taupe">Don't have an account yet?</h2>
      <a class="body-m-semibold text-taupe underline" href="{{ routes.account_register_url }}">Create an account</a>
    </div>
  {% endif %}
  </div>
  {% render "recover_password_form" %}
</div>