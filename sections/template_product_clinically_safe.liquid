<style>
  .pdf_embed {
    width: 100%;
    height: 557px;
  }
</style>
<div class="w-full  h-[1183px]">
  <div class="h-[626px] relative">
    <div class="absolute w-full h-full">
      <img
        class="w-full h-full object-cover"
        src="{{ section.settings.background_image | img_url: 'master'}}"
        alt="">
      <h2 class="absolute top-[50%] w-full text-white text-[40px] text-center">{{ section.settings.clinically_safe_title }}</h2>
      <div class="absolute bottom-[40px] w-[163px] h-[200px] left-[50%] translate-x-[-50%]">
        <img
          class="w-full h-full object-cover"
          src="{{ section.settings.overlay_icon | img_url: 'master'}}"
          alt="">
      </div>
    </div>
  </div>
</div>
<a
  href="{{ section.settings.pdf_url }}"
  target="_blank"
  rel="noopener noreferrer">Download PDF Link</a>

<div class="section">
  <div class="flex flex-col md:flex-row md:h-[668px] justify-between w-full border border-[#E6DFDB] rounded-[20px] overflow-hidden">
    <div class="w-full h-[420px] md:h-full">
      <img
        class="w-full h-full object-cover"
        src="{{ section.settings.background_image | img_url: 'master'}}"
        alt="">
    </div>
    <div class="flex flex-col justify-center items-center w-full h-[460px] md:h-full bg-white border border-[#E6DFDB] px-[19px] gap-[8px] rounded-[240px]">
      <h2 class="w-full text-center">{{ section.settings.clinically_safe_title }}</h2>
      <a
        class="w-full underline text-center"
        href="{{ section.settings.pdf_url }}"
        target="_blank"
        rel="noopener noreferrer">View Certification</a>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Clinically Safe Product",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "clinically_safe_title"
      }, {
        "type": "image_picker",
        "label": "Background Image",
        "id": "background_image"
      }, {
        "type": "url",
        "label": "Url to pdf file",
        "id": "pdf_url"
      }
    ]
  }
{% endschema %}