<div class="section">
  {% assign title_text = section.settings.title %}
  {% assign title_image = section.settings.title_image %}
  {% include 'section_title' with title_text, title_image %}
  <div class="flex flex-wrap gap-x-[16px] gap-y-[24px]">
    {% for block in section.blocks %}
      <div class="flex flex-col bg-white rounded-[48px] border border-[#E6DFDB] p-[24px] w-full sm:w-[426px]">
        <h2 class="mb-[24px]">{{ block.settings.name }}</h2>
        <div class="mb-[16px]">
          <h2>{{ block.settings.address_1 }}</h2>
          <h2>{{ block.settings.address_2 }}</h2>
        </div>
        <a class="mb-[16px]" href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a>
        <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Distributors",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "title"
      }, {
        "type": "image_picker",
        "label": "Title Images",
        "id": "title_image"
      }
    ],
    "blocks": [
      {
        "type": "section",
        "name": "Distributor",
        "settings": [
          {
            "type": "text",
            "label": "Distributor Name",
            "id": "name"
          },
          {
            "type": "text",
            "label": "Address Line 1",
            "id": "address_1"
          },
          {
            "type": "text",
            "label": "Address Line 2",
            "id": "address_2"
          },
          {
            "type": "text",
            "label": "Phone Number",
            "id": "phone"
          }, {
            "type": "text",
            "label": "Email",
            "id": "email"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "block",
        "name": "Distributors"
      }
    ]
  }
{% endschema %}