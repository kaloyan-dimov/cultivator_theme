<div class="section blog_page">
  <div class="article_listing flex flex-wrap gap-[16px]">
    {% for article in blogs.journals.articles %}
      <div class="w-[316px] h-[550px]">
        <div class="flex flex-col w-full h-[518px] px-[24px] pb-[16px]">
          <div class="w-full h-[193px]">
            <img
              class="w-full h-full object-cover"
              src="{{ article.image | img_url: 'master'}}"
              alt="">
          </div>
          <h2>{{ article.title }}</h2>
          <h3>{{ article.excerpt }}</h3>
        </div>
      </div>
    {% endfor %}
  </div>
</div>