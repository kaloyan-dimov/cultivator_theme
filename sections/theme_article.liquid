<div class="section">
  <div class="article_single max-w-[867px] mx-[auto] flex flex-col">
    <h1 class="text-[36px] text-[#54443B]">{{ article.title }}</h1>
    <div class="w-full h-[575px]">
      <img
        class="w-full h-full object-cover"
        src="{{ article.image | img_url: 'master'}}"
        alt="">
    </div>
    <h2 class="border border-[#E6DFDB] rounded-[12px] text-center">{{ article.author }} | {{ article.published_at | date: "%b %d, %y" }}</h2>
    <div>{{ article.content }}</div>
  </div>
</div>