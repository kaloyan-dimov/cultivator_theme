<div class="section">
  <h1 class="text-[36px] text-[#54443B] text-center">{{ article.title }}</h1>
  <div class="article_single max-w-[867px] mx-[auto] flex flex-col py-[56px] px-[16px]">
    <div class="w-full h-[575px] rounded-[17px] oveflow-hidden">
      <img
        class="w-full h-full object-cover"
        src="{{ article.image | img_url: 'master'}}"
        alt="">
    </div>
    <h2 class="border border-[#E6DFDB] rounded-[12px] text-center">by {{ article.author }} | {{ article.published_at | date: "%b %d, %y" }}</h2>
    <div>{{ article.content }}</div>
  </div>
</div>