<div class="max-w-[1440px] mx-[auto] px-[0] md:px-[64px]">
  <div class="flex flex-col md:flex-row h-[595px] md:h-[640px] mb-[64px] md:rounded-[20px] md:border border-[#E6DFDB] overflow-hidden">
    <div class="h-[356px] md:h-full w-full">
      {% if section.settings.background_image != null %}
        <img
          class="h-full w-full object-cover"
          src="{{ section.settings.background_image | img_url: 'master'}}"
          alt="">
      {% endif %}
    </div>
    <div class="flex flex-col items-center justify-center w-full md:w-[411px] lg:w-[491px] bg-white min-h-[240px] md:rounded-[240px] md:border border-[#E6DFDB] shrink-0">
      {% if section.settings.title != null %}
        <h2 class="mb-2 text-[32px] text-[#56463D] text-center">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.paragraph != null %}
        <h3 class="mb-4 text-[16px] text-[#7B695E] text-center">{{ section.settings.paragraph }}</h3>
      {% endif %}
      <a href="{% if section.settings.button_link != null%} {{ section.settings.button_link }} {% endif %}" class="border-[#CCAC71] border text-[14px] uppercase py-[19px] px-[24px] flex gap-2 w-fit rounded-[24px] sm:mx-auto items-center">
        {% if section.settings.button_text != null %}
          <h3 class="text-[#CCAC71] h-[18px]">{{ section.settings.button_text }}</h3>
        {% endif %}
        <div class="button_arrow button_arrow_gold"></div>
      </a>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Call to Action",
    "settings": [
      {
        "type": "image_picker",
        "label": "Background Image",
        "id": "background_image"
      },
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      },
      {
        "type": "textarea",
        "label": "Paragraph",
        "id": "paragraph"
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "button_text"
      }, {
        "type": "url",
        "label": "Button Link",
        "id": "button_link"
      }
    ],
    "presets": [
      {
        "category": "block",
        "name": "Call to Action"
      }
    ]
  }
{% endschema %}