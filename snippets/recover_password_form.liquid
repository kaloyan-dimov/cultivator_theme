<div class="recover_password_form fixed bg-[rgba(0,0,0,0.5)] top-[0] left-[0] z-[2]">
  {% form 'recover_customer_password' %}
    <div class="flex flex-col m-4">
      <div class="flex justify-between w-full max-w-[458px]">
        <h2>Reset Password</h2>
        <h2 class="recover_password_close">Close</h2>
      </div>
      <h2>Enter the email address used for your account below and we will send you a link to reset your password.</h2>
      <div class="email">
        <input
          type="email"
          name="email"
          placeholder="Email">
      </div>

      <div class="submit">
        <input type="submit" value="Submit">
      </div>
    </div>
    {{ form.errors | default_errors }}
  {% endform %}
</div>