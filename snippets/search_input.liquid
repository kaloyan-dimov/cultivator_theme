<div class="search_container fixed z-[3] w-full top-[0] left-[0] shadow-[0px_15px_10px_-15px_rgba(0,0,0,0.3)]">
  <form class="search_products max-w-[1312px] relative z-[2] w-full h-[60px] my-[16px] mx-auto bg-white" action="{{ routes.search_url }}">
    <input
      class="search_input w-full pl-[44px] h-[56px] top-[8px] border border-ecru-x rounded-[12px]"
      type="text" 
      placeholder="search"
      name="q"
      value="{{ search.terms | escape }}" />
      <h2 class="search_close cursor-pointer shrink-0 underline">
        close
      </h2>
  </form>
  {% assign wishlist_array = customer.metafields.custom.wishlist | split: "," %}
  <div class="fixed top-[0] left-0 w-full h-full bg-white z-[1] pt-[76px] overflow-auto">
    <div class="flex">
    <h2 class="search_text mb-[16px]">Trending products:</h2>
      <button class="cursor-pointer underline">see all results</button>
    </div>
    <div class="search_results flex flex-col sm:flex-row px-[16px] gap-[18px] sm:flex-wrap justify-center"></div>
    <div class="search_trending_products flex flex-col sm:flex-row px-[16px] gap-[18px] sm:flex-wrap justify-center active">
      {% for product in settings.trending_products %}
        <div class="w-full max-w-[358px] sm:max-w-[316px]">
          {% include 'product_card' with product, wishlist_array %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>