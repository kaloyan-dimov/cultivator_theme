<div class="container sm:max-w-[72.3%] py-[80px] sm:py-[128px] mx-[24px] sm:mx-auto w-fit">
  <h2 class="text-center text-[32px] sm:text-[42px]">
    {% for block in section.blocks %}
      {% if block.settings.image_for_text != null %}
        <span class="border border-[#D1BEB1] rounded-[24px] pl-[16px] pt-[6px] pb-[10px] inline-block">
          {{ block.settings.text }}
          <img
            class="h-[42px] inline-block"
            src="{{ block.settings.image_for_text | img_url: 'master'}}"
            alt="">
        </span>&nbsp
      {% else %}
        {{ block.settings.text }}
      {% endif %}
    {% endfor %}
  </h2>
</div>

{% schema %}
  {
    "name": "Paragraph",
    "blocks": [
      {
        "type": "section",
        "name": "Text Snippet",
        "settings": [
          {
            "type": "textarea",
            "label": "Text",
            "id": "text"
          }, {
            "type": "image_picker",
            "label": "Image for text",
            "id": "image_for_text"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "block",
        "name": "Paragraph"
      }
    ]
  }
{% endschema %}