<div class="section">
  <h1 class="text-[50px]">Search</h1>
  {% if search.performed %}
    <h2>search results for "{{ search.terms | escape }}" ({{ search.results | size }})</h2>
    {% assign wishlist_array = customer.metafields.custom.wishlist | split: "," %}
    <div class="flex flex-col w-full sm:flex-row px-[16px] gap-[18px] sm:flex-wrap justify-center">
      {% for result in search.results %}
        {% if result.object_type == "product" %}
          {% assign product = result %}
          <div class="w-full max-w-[358px] sm:max-w-[316px]">
            {% include 'product_card' with product, wishlist_array %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <h2>Start your search from the searchbar</h2>
  {% endif %}
</div>