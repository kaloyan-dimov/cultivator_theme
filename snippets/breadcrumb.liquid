{%- assign t = template | split: '.' | first -%}
<nav
  class="breadcrumbs p-4"
  role="navigation"
  aria-label="breadcrumbs">
  <ul
    class="flex gap-[24px]">
    <li
      class="breadcrumb">
      <a
        href="/">Home</a>
    </li>
    {%- case t -%}
      {%- when 'page' -%}
      <li
        class="breadcrumb">
        <a
          href="{{ page.url }}"
          aria-current="page">{{ page.title }}</a>
      </li>
      {%- when 'product' -%}
      {{ template }}
      {{ template.directory }}
      {% for collection in product.collections %}
        {{ collection.title }}
      {% endfor %}
      {%- if collection.url -%}
        <li
          class="breadcrumb">
          {{ collection.title | link_to: collection.url }}
        </li>
      {%- endif -%}
      <li
        class="breadcrumb">
        <a
          href="{{ product.url }}"
          aria-current="page">{{ product.title }}</a>
      </li>
      {%- when 'collection' and collection.handle -%}
      {%- if current_tags -%}
        <li
          class="breadcrumb">
          {{ collection.title | link_to: collection.url }}
        </li>
        <li
          class="breadcrumb">
          {%- capture tag_url -%}
            {{ collection.url }}/{{ current_tags | join: "+" }}{%- endcapture -%}
          <a
            href="{{ tag_url }}"
            aria-current="page">{{ current_tags | join: " + " }}</a>
        </li>
      {%- else -%}
        <li
          class="breadcrumb">
          <a
            href="{{ collection.url }}"
            aria-current="page">{{ collection.title }}</a>
        </li>
      {%- endif -%}
      {%- when 'blog' -%}
      {%- if current_tags -%}
        <li
          class="breadcrumb">
          {{ blog.title | link_to: blog.url }}
        </li>
        <li
          class="breadcrumb">
          {%- capture tag_url -%}
            {{ blog.url }}/tagged/{{ current_tags | join: "+" }}{%- endcapture -%}
          <a
            href="{{ tag_url }}"
            aria-current="page">{{ current_tags | join: " + " }}</a>
        </li>
      {%- else -%}
        <li
          class="breadcrumb">
          <a
            href="{{ blog.url }}"
            aria-current="page">{{ blog.title }}</a>
        </li>
      {%- endif -%}
      {%- when 'article' -%}
      <li
        class="breadcrumb">
        {{ blog.title | link_to: blog.url }}
      </li>
      <li
        class="breadcrumb">
        <a
          href="{{ article.url }}"
          aria-current="page">{{ article.title }}</a>
      </li>
    {%- else -%}
      <li
        class="breadcrumb">
        <a
          href="{{ request.path }}"
          aria-current="page">{{ page_title }}</a>
      </li>
    {%- endcase -%}
  </ul>
</nav>