<div class="section blog_page">
  <h1 class="w-full text-center text-[36px] mb-[36px]">{{ blog.title }}</h1>
  <div class="flex gap-[8px] justify-center w-full">
    {% for tag in blog.all_tags %}
      <h3>{{ tag }}</h3>
    {% endfor %}
  </div><br>
  current_tags: {{ current_tags }}<br>
  curr tags null?
  {% if current_tags.size > 0 %}
    more
  {% else %}
    less
  {% endif %}
  <br>
  {% if blog.all_tags.size > 0 %}
    <ul class="tag-filters">
      {% for tag in blog.all_tags %}
        {% if current_tags contains tag %}
          <li class="tag-filters__item active">{{ tag | link_to_remove_tag: tag }}</li>
        {% else %}
          <li class="tag-filters__item">{{ tag | link_to_add_tag: tag }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  {% endif %}
  <div class="article_listing flex flex-wrap gap-[16px]">
    {% for article in blogs.journals.articles %}
      {{ article.tags }}
      <div class="w-[316px] h-[550px]">
        <div class="flex flex-col w-full h-[518px] px-[24px] pb-[16px] relative">
          <div class="w-full h-[193px] mb-[16px]">
            <img
              class="w-full h-full object-cover"
              src="{{ article.image | img_url: 'master'}}"
              alt="">
          </div>
          <h2 class="mb-[8px]">{{ article.title }}</h2>
          <h3 class="mb-[64px] max-h-[135px] overflow-hidden">{{ article.excerpt }}</h3>
          <div class="absolute left-[24px] bottom-[16px]">arrow</div>
        </div>
      </div>
    {% endfor %}

  </div>
</div>