<div class="px-[16px] w-full max-w-[428px] flex flex-col items-center mx-auto">
  <h1 class="text-[36px] mb-[48px]">Login</h1>
  {% form 'customer_login' %}
    {{ form.errors | default_errors }}

    <div class="email w-full">
      <input
        class="flex items-center w-full bg-white border border-[#EAE2DB] px-[16px] h-[56px] mb-[16px]"
        type="email"
        name="customer[email]"
        placeholder="Email">
    </div>

    <div class="password w-full">
      <input
        class="w-full"
        type="password"
        name="customer[password]"
        placeholder="Password">
    </div>

    <h2 class="text-[18px] recover_password_trigger">Forgot password?</h2>

    <h2 class="text-[18px]">by logging in, you agree to our
      <a href="#">terms</a>, and
      <a href="">privacy policy</a>
    </h2>

    <div class="submit">
      <input type="submit" value="Sign in">
    </div>
  {% endform %}
  <div id="test_submit bg-red-300">test submit</div>
  Recover Customer Password
  {% render "recover_password_form" %}

  {% if shop.customer_accounts_enabled %}
    <div class="flex flex-col">
      <h2 class="text-[18px]">Don't have an account yet?</h2>
      <a class="text-[18px]" href="{{ routes.account_register_url }}">Create an account</a>
    </div>
  {% endif %}
</div>