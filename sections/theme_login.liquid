<div class="px-[16px] w-full max-w-[428px] flex flex-col items-center mx-auto">
  <h1 class="text-[36px] mb-[48px]">Login</h1>
  {% form 'customer_login' %}
    <div class="flex flex-col gap-[16px]">
      {{ form.errors | default_errors }}

      <div class="email w-full">
        <input
          class="flex items-center w-full bg-white border border-[#EAE2DB] rounded-[12px] px-[16px] h-[56px] text-[18px]"
          type="email"
          name="customer[email]"
          placeholder="Email">
      </div>

      <div class="password w-full">
        <input
          class="flex items-center w-full bg-white border border-[#EAE2DB] rounded-[12px] px-[16px] h-[56px] text-[18px]"
          type="password"
          name="customer[password]"
          placeholder="Password">
      </div>

      <h2 class="text-[18px] recover_password_trigger underline self-end cursor-pointer">Forgot password?</h2>

      <h2 class="text-[18px] my-[8px]">by logging in, you agree to our
        <a href="#">terms</a>, and
        <a href="#">privacy policy</a>
      </h2>

      <div class="submit">
        <input
          type="submit"
          value="LOGIN"
          class="flex justify-center items-center w-full bg-[#CCAC71] rounded-[18px] text-[15px] h-[56px] text-white">
      </div>
    </div>
  {% endform %}
  {% if shop.customer_accounts_enabled %}
    <div class="flex flex-col items-center">
      <h2 class="text-[18px] text-[#776255]">Don't have an account yet?</h2>
      <a class="text-[18px] text-[#776255] underline" href="{{ routes.account_register_url }}">Create an account</a>
    </div>
  {% endif %}
  {% render "recover_password_form" %}
</div>