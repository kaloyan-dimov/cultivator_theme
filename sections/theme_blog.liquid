<div class="section blog_page">
  <h1 class="w-full text-center text-[36px] mb-[36px]">{{ blog.title }}</h1>
  <div class="flex gap-[8px] justify-center w-full">
    {% for tag in blog.all_tags %}
      <h3>{{ tag }}</h3>
    {% endfor %}
  </div><br>
  current_tags: {{ current_tags }}<br>
  {% if blog.all_tags.size > 0 %}
    <ul class="tag-filters">
      {% for tag in blog.all_tags %}
        {% if current_tags contains tag %}
          <li class="tag-filters__item active">{{ tag | link_to_remove_tag: tag }}</li>
        {% else %}
          <li class="tag-filters__item">{{ tag | link_to_add_tag: tag }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  {% endif %}
  <div class="article_listing flex flex-wrap gap-[16px]">
    {% for article in blogs.journals.articles %}
      {% if current_tags.size > 0 %}
        {% for article_tag in article.tags %}
          {% if current_tags contains article_tag %}
            <h2>{{ article_tag }}</h2>
          {% endif %}
        {% endfor %}
      {% else %}
        {% include 'article_card' with article %}
      {% endif %}
    {% endfor %}

  </div>
</div>