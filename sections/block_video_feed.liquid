<div class="section mb-[64px] video_feed">
  <h2 class="text-center text-[48px] mb-[80px]">
    {% if section.settings.title_image != null %}
      <span class="w-[50px] h-[50px]">
        <img
          class="h-[42px] inline-block"
          src="{{ section.settings.title_image | img_url: 'master'}}"
          alt="">
      </span>
    {% endif %}
    {% comment %} {% endcomment %}
    {% if section.settings.section_title != null %}
      {{ section.settings.section_title }}
    {% endif %}
    {% comment %} {% endcomment %}
    {% if section.settings.title_image != null %}
      <span class="w-[50px] h-[50px]">
        <img
          class="h-[42px] inline-block"
          src="{{ section.settings.title_image | img_url: 'master'}}"
          alt="">
      </span>
      {% comment %} {% endcomment %}
    {% endif %}
  </h2>

  <div class="swiper video_feed_swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide overflow-hidden rounded-[16px]">
          <div class="video_feed_video w-full h-full">
            {{ block.settings.video | video_tag: autoplay: true, loop: true }}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

{% schema %}
  {
    "name": "Video Feed",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "section_title"
      }, {
        "type": "image_picker",
        "label": "Title Images",
        "id": "title_image"
      }
    ],
    "blocks": [
      {
        "type": "section",
        "name": "Video",
        "settings": [
          {
            "type": "video",
            "label": "Video",
            "id": "video"
          }, {
            "type": "url",
            "label": "Video Url",
            "id": "video_url"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "block",
        "name": "Video Feed"
      }
    ]
  }
{% endschema %}